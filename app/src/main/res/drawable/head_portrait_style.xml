<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <corners android:radius="90dp"/>
            <solid android:color="#73ffffff" />
            <size android:width="170dp" android:height="170dp"/>
        </shape>
    </item>

    <item android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <corners android:radius="90dp"/>
                    <solid android:color="#ff1e39" />
                    <size android:width="165dp" android:height="165dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval" >
                    <corners android:radius="90dp"/>
                    <solid android:color="#ffffff" />
                    <size android:width="180dp" android:height="180dp"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list>